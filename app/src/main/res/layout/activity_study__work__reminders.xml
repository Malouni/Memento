<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/books"
    tools:context=".Study_Work_Reminders">

    <ListView
        android:id="@+id/listView"
        android:layout_width="348dp"
        android:layout_height="458dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="#F8F7F7"
        android:cacheColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="348dp"
        android:layout_height="151dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/italianno"
        android:gravity="center_vertical"
        android:text="Study/Work Reminder"
        android:textAlignment="center"
        android:textColor="#FFC107"
        android:textSize="45sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="346dp"
        android:layout_height="38dp"
        android:layout_marginTop="1dp"
        android:background="#FDFFFFFF"
        android:gravity="center_horizontal"
        android:text="Name"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/Descrption_field"
        android:layout_width="348dp"
        android:layout_height="254dp"
        android:background="#FFFFFF"
        android:text="TextView"
        android:textAlignment="viewStart"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/back_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="Back"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/save_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Descrption_field"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:text="Save"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Descrption_field"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/back"
        android:layout_width="172dp"
        android:layout_height="73dp"
        android:layout_marginBottom="28dp"
        android:text="back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>